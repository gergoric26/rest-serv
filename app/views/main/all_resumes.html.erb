<h1>All resumes</h1>

</br>

<div><%= link_to "New Resume", new_resume_path, class: 'btn btn-success' %></div>

</br>

<% @resumes.each do |resume| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <p>
          <%= link_to resume.name, resume %> | <%= resume.position %>
        </p>
      </h4>
    </div>
  </div>
<% end %>
